{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-shadow": "off",
        "array-callback-return": "warn",
        "consistent-return": "warn",
        "no-console": "off"
    },
    "overrides": [
        {
            "files": ["public/js/*.js"],
            "rules": {
                "no-undef": "off",
                "no-unused-vars": "off",
                "no-use-before-define": "off"
            }
        },
        {
            "files": ["util/socketServer.js"],
            "rules": {
                "global-require": "off"
            }
        }
    ]
}
